{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@exception": [
        "src/exception"
      ],
      "@exception/*": [
        "src/exception/*"
      ],
      "@guard": [
        "src/guard"
      ],
      "@guard/*": [
        "src/guard/*"
      ],
      "@interceptor": [
        "src/interceptor"
      ],
      "@interceptor/*": [
        "src/interceptor/*"
      ],
      "@pipe": [
        "src/pipe"
      ],
      "@pipe/*": [
        "src/pipe/*"
      ],
      "@libs": [
        "src/libs"
      ],
      "@libs/*": [
        "src/libs/*"
      ],
      "@globals": [
        "src/globals"
      ],
      "@globals/*": [
        "src/globals/*"
      ],
    }
  }
}
