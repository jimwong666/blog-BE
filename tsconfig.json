{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@libs": [
        "src/libs"
      ],
      "@libs/*": [
        "src/libs/*"
      ],
      "@globals": [
        "src/globals"
      ],
      "@globals/*": [
        "src/globals/*"
      ],
    }
  }
}
